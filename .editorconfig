# http://editorconfig.org

root = true

[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true
indent_style=space
indent_size=4

[{composer.lock,.babelrc,.stylelintrc,.eslintrc,jest.config,*.json}]
indent_style=space
indent_size=2

[*.css]
indent_style=space
indent_size=2

[*.scss]
indent_style=space
indent_size=2

[*.js]
indent_style=space
indent_size=2

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

